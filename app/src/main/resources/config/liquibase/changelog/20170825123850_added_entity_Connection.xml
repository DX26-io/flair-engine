<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

	<property name="now" value="now()" dbms="h2" />

	<property name="now" value="current_timestamp"
		dbms="postgresql" />

	<property name="floatType" value="float4"
		dbms="postgresql, h2" />
	<property name="floatType" value="float"
		dbms="mysql, oracle, mssql" />

	<!-- Added the entity Connection. -->
	<changeSet id="20170825123850-1" author="jhipster">
		<createTable tableName="connection">
			<column name="id" type="bigint"
				autoIncrement="${autoIncrement}">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(100)">
				<constraints nullable="false" />
			</column>

			<column name="connection_username" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="connection_password" type="varchar(255)">
				<constraints nullable="false" />
			</column>

			<column name="link_id" type="varchar(255)">
				<constraints nullable="false" unique="true" />
			</column>

			<column name="connection_type_id" type="bigint">
				<constraints nullable="true" />
			</column>

			<column name="details" type="text">
				<constraints nullable="false" />
			</column>

			<!-- jhipster-needle-liquibase-add-column - JHipster will add columns 
				here, do not remove -->
		</createTable>

	</changeSet>
</databaseChangeLog>
